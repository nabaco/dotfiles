#{{{ Git diffs/merges config

[diff]
    tool = vimdiff
    colorMoved = default
[difftool "vimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[difftool "helix"]
    cmd = "hx --vsplit \"$LOCAL\" \"$REMOTE\""
[difftool]
    prompt = false
;[difftool "meld"]
;    trustExitCode = true
[merge]
    tool = vimdiff
    conflictstyle = diff3
[mergetool]
    prompt = false
[mergetool "vimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\" \"$MERGED\" -c '$wincmd w' -c 'wincmd J'"
[mergetool]
    prompt = false
#}}}
