# All lines marked with #t, will appear in help message with the subsequent line
#
# wm independent hotkeys
#

# Help
super + F1
	awk '/^[A-Za-z]/ && last \{print $0,"\t",last\} \{last=""\} /^#/\{last=$0\}' ~/.config/sxhkd/sxhkdrc | column -t -s $'\t' | rofi -dmenu -i -no-show-icons -width 1000 -mesg "<big>Keyboard Shortcuts</big>"
	#	sed '1,9d;/# /N; /# /!d; s/\n/: /g; s/# //g;' ~/.config/sxhkd/sxhkdrc|rofi -dmenu -markup-rows -mesg "<big>System Shortcuts</big>"

# Program launcher
super + space
	rofi -show run

# Terminal emulator
super + Return
	$TERMINAL -e zsh

# Text editor
super + v
	$TERMINAL -e $EDITOR

# Internet browser
super + q
	$BROWSER

# File manager
super + e
	$TERMINAL -e vifmrun

# RSS feed reader
super + n
	$TERMINAL -e newsboat

# Mail reader
super + m
	$TERMINAL -e neomutt

# Clipboard manager
ctrl + F1
	CM_LAUNCHER=rofi clipmenu

# Password selector
super + shift + p
	rofi-pass

# Config editor
super + shift + c
	dot-config

# Delete current wallpaper
super + d
	setbg -d

# Change current wallpaper
super + c
	setbg

# Mount USB drive or Android phone
super + F9
	dmenumount

# Unmount USB drive or Android phone
shift + super + F9
	dmenuumount

# make sxhkd reload its configuration files:
# disable since it's done automatically from vim
#super + Escape
#	pkill -USR1 -x sxhkd

#
# Music Controls
#

XF86AudioPlay
	mpc toggle
XF86AudioStop
	mpc stop
XF86AudioPrevious
	mpc prev
XF86AudioNext
	mpc next
XF86AudioRaiseVolume
	pulsemixer --change-volume +5
XF86AudioLowerVolume
	pulsemixer --change-volume -5
XF86AudioMute
	pulsemixer --toggle-mute

#
# Function keys binding
#

XF86ScreenSaver
	xset s activate
XF86Sleep
	systemctl suspend

#
# bspwm hotkeys
#

# Quit/Restart window manager
super + alt + {q,r}
	bspc {quit,wm -r}

# Close/Kill the current node
super + {_,shift + }w
	bspc node -{c,k}

# Toggle tiled/monocle layout
super + shift + m
	bspc desktop -l next

# Send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# Swap the current node and the biggest node
super + g
	bspc node -s biggest

#
# state/flags
#

# Set the window state (tiled, pseudo tiled, floating, fullscreen)
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Set the node flags (marked, locked, sticky, private, hidden)
super + ctrl + {m,x,y,z,g}
	bspc node -g {marked,locked,sticky,private,hidden}

#
# focus/swap
#

# Focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# Focus the node for the given path jump (parent, brother, first, second)
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# Focus the next/previous node in the current desktop
alt + {_,shift + }Tab
#super + {_,shift + }c
	bspc node -f {next,prev}.local

# Focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# Focus the last node/desktop
super + {alt + Tab,grave}
	bspc {node,desktop} -f last

# Bring up window chooser
super + Tab
	rofi -modi window,hidden:wm_unhide.sh -show window

# Focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# Focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# Preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# Preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# Cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# Cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# Expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# Contract a window by moving one of its side inward
super + ctrl + alt + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# Move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Full screenshot
Print
	screenshot	

# Window screenshot
shift + Print
	screenshot window

# Screenshot selection
ctrl + Print
	screenshot selection
